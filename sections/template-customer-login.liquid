<link rel="stylesheet" href="{{ 'template-customer-login.css' | asset_url }}">

<div class="template-login__wrapper">
	<div class="template-login__inner" data-animation-section-block="1">
		<div class="template-login__box">

			{% comment %}Login form{% endcomment %}

			<div class="template-login__top" id="loginBox">
				<h1 class="template-login__title h1">{{ section.settings.login_title }}</h1>
				{% form 'customer_login' %}
					{% if form.errors %}
						{% render 'form-error', form: form %}
					{% endif %}
					<div class="template-login__form-top">
						<div class="template-login__form-box">
							<label for="email-address" class="template-login__form-label">{{ section.settings.email_placeholder }}</label>
							<input
								type="email"
								name="customer[email]"
								id="email-address"
								autocomplete="email"
								class="input"
								placeholder="{{ section.settings.email_placeholder }}"
								required
							>
						</div>

						<div class="template-login__form-box">
							<label for="password" class="template-login__form-label">{{ section.settings.password_placeholder }}</label>
							<input
								type="password"
								name="customer[password]"
								id="password"
								autocomplete="current-password"
								class="input"
								placeholder="{{ section.settings.password_placeholder }}"
								required
							>
						</div>
						<div class="template-login__form-button">
							<input type="submit" class="template-login__form-login" value="{{ section.settings.login_button }}">
						</div>
					</div>
				{% endform %}

				<a href="#" class="template-login__btn-forgot" id="forgotButton">{{ section.settings.forgot_button }}</a>

				<div class="template-login__register">
					<h2 class="template-login__register-title">{{ section.settings.register_caption }}</h2>
					<a href="{{ routes.account_register_url }}"
					   class="template-login__register-button">{{ section.settings.register_button }}</a>
				</div>
			</div>

			{% comment %}Recovery form{% endcomment %}

			<div class="template-login__top hide recover" id="recoverBox">
				<h1 class="template-login__title recover__title h1">{{ section.settings.recover_title }}</h1>
				<div class="template-login__subtitle">{{ section.settings.recover_subtitle }}</div>
				{% form 'recover_customer_password' %}
					{% render 'form-error', form: form, class: "template-login__form" %}
					<div class="template-login__form-top">
						<div class="template-login__form-box">
							<label for="email" class="template-login__form-label">{{ section.settings.recover_email_placeholder }}</label>
							<input
								type="email"
								name="email"
								id="email"
								autocomplete="email"
								class="input"
								placeholder="{{ section.settings.recover_email_placeholder }}"
								required
							>
						</div>
						<div class="template-login__form-button">
							<input type="submit" class="template-login__form-login" value="{{ section.settings.recover_submit }}">
						</div>
						<a href="#" class="template-login__btn-forgot recover__return" id="recoveryBtn">{{ section.settings.recover_back }}</a>
					</div>
				{% endform %}
			</div>

			<div class="template-login__photo">
				{% if section.settings.image != blank %}
					<img
						src="{{ section.settings.image | image_url }}"
						alt=""
						width="auto"
						height="auto"
						loading="lazy"
						class="template-login__photo-img"
					>
				{% endif %}
			</div>
		</div>
	</div>
</div>

<script type="module" src="{{ 'template-customer-login.js' | asset_url }}"></script>

